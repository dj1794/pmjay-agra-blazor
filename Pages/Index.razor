@page "/"
@using System.Linq
@using Microsoft.JSInterop
@inject PmjayAgra.Blazor.Data.AgraDataService DataService
@inject IJSRuntime JS

<style>
/* Styles ported from INDEXRef.HTML (simplified) */
body { font-family: Arial, sans-serif; background: #f4f6f8; padding:20px; }
.header { display: flex; align-items: center; gap:20px; margin-bottom:10px; }
.header img { height:70px; }
h2, h4 { text-align: center; margin:4px0; }
.filters { background: #fff; padding:15px; border-radius:6px; display: grid; grid-template-columns: repeat(4,1fr); gap:12px; margin-bottom:15px; }
.filter-group { display: flex; flex-direction: column; }
.filter-group label { font-size:12px; font-weight: bold; margin-bottom:4px; }
.filter-group input, .filter-group select { padding:7px; font-size:13px; }
.summary { display: flex; gap:15px; margin-bottom:15px; }
.card { flex:1; background: #fff; padding:12px; border-radius:6px; text-align: center; box-shadow:01px4px rgba(0,0,0,0.1); }
.card b { font-size:18px; color: #007bff; }
.actions { text-align: right; margin-bottom:10px; }
button { padding:8px12px; border: none; border-radius:4px; cursor: pointer; color: #fff; }
.download { background: #28a745; }
.print { background: #6c757d; }
.table-wrapper { background: #fff; padding:8px; border-radius:6px; }
.table { width:100%; border-collapse: collapse; background: #fff; font-size:12px; }
th, td { border:1px solid #ccc; padding:6px; }
th { background: #007bff; color: #fff; position: sticky; top:0; }
tr:nth-child(even) { background: #f2f2f2; }
.pager { display: flex; gap:8px; align-items: center; justify-content: center; margin-top:10px; }
/* PRINT */
@@media print { .filters, .actions { display: none; } body { background: white; } th { background: #ddd !important; color: black !important; } }
</style>

<div class="header">
 <img src="https://upload.wikimedia.org/wikipedia/commons/5/55/Emblem_of_India.svg" alt="Emblem">
 <img src="https://mera.pmjay.gov.in/images/logo.png" alt="PMJAY">
</div>

<h2>Ayushman Bharat – PMJAY Data</h2>
<h4>District Agra</h4>

<!-- FILTERS -->
<div class="filters">
 <div class="filter-group">
 <label>Search (Name / Family ID)</label>
 <input @bind="Search" />
 </div>

 <div class="filter-group">
 <label>District</label>
 <select @bind="District">
 <option value="">All</option>
 <option>Agra</option>
 </select>
 </div>

 <div class="filter-group">
 <label>Block</label>
 <select @bind="Block">
 <option value="">All</option>
 <option>Etmadpur</option>
 <option>Sadar</option>
 <option>MCORP</option>
 </select>
 </div>

 <div class="filter-group">
 <label>Village / Ward</label>
 <select @bind="Village">
 <option value="">All</option>
 <option>VILLAGE1</option>
 <option>VILLAGE2</option>
 </select>
 </div>

 <div class="filter-group">
 <label>Rural / Urban</label>
 <select @bind="RU">
 <option value="">All</option>
 <option>RURAL</option>
 <option>URBAN</option>
 </select>
 </div>

 <div class="filter-group">
 <label>Source Type</label>
 <select @bind="Source">
 <option value="">All</option>
 <option>SECC</option>
 <option>TPHH</option>
 <option>MMJAA</option>
 <option>STPHH</option>
 <option>BOCW</option>
 </select>
 </div>

 <div class="filter-group">
 <label>Member Status</label>
 <select @bind="MemberStatus">
 <option value="">All</option>
 <option>Approved</option>
 <option>Disabled</option>
 <option>Pending</option>
 <option>ACTIVE</option>
 </select>
 </div>

 <div class="filter-group">
 <label>Family Status</label>
 <select @bind="FamilyStatus">
 <option value="">All</option>
 <option>ACTIVE</option>
 <option>INACTIVE</option>
 </select>
 </div>
</div>

<!-- SUMMARY -->
<div class="summary">
 <div class="card">Total Families<br><b>@TotalFamilies</b></div>
 <div class="card">Total Members<br><b>@TotalMembers</b></div>
 <div class="card">Covered Members<br><b>@CoveredMembers</b></div>
 <div class="card">Covered Families<br><b>@CoveredFamilies</b></div>
</div>

<div class="actions">
 <button class="download" @onclick="ExportCsv">Download Excel</button>
 <button class="print" @onclick="Print">Print</button>
</div>

<div class="table-wrapper">
 <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom:8px;">
 <div>
 <label>Page size: </label>
 <select @onchange="OnPageSizeChanged" value="@PageSize">
 <option value="10">10</option>
 <option value="25">25</option>
 <option value="100">100</option>
 <option value="250">250</option>
 </select>
 </div>
 <div>Showing @((CurrentPage-1)*PageSize +1)-@Math.Min(CurrentPage*PageSize, Total) of @Total</div>
 </div>

 <table class="table">
 <thead>
 <tr>
 @foreach (var h in Headers)
 {
 <th>@h</th>
 }
 </tr>
 </thead>
 <tbody>
 @foreach (var r in DisplayRows)
 {
 <tr>
 @foreach (var h in Headers)
 {
 <td>@(GetValue(r, h) ?? string.Empty)</td>
 }
 </tr>
 }
 </tbody>
 </table>

 <div class="pager">
 <button @onclick="First">First</button>
 <button @onclick="Prev">Prev</button>
 <span>Page @CurrentPage of @TotalPages</span>
 <button @onclick="Next">Next</button>
 <button @onclick="Last">Last</button>
 </div>
</div>

@code {
 readonly List<string> ReferenceHeaders = new()
 {
 "Family ID","Member ID","Name","Relation","Guardian","R/U","District","Block","Village","Source","Member Status","Family Status"
 };

 List<string> Headers = new();
 List<Dictionary<string, object?>> Rows = new();
 List<Dictionary<string, object?>> DisplayRows = new();

 // Filters
 string Search = string.Empty;
 string District = string.Empty;
 string Block = string.Empty;
 string Village = string.Empty;
 string RU = string.Empty;
 string Source = string.Empty;
 string MemberStatus = string.Empty;
 string FamilyStatus = string.Empty;

 int Total =0;
 int CurrentPage =1;
 int PageSize =10; // default kept at10
 int TotalPages => Math.Max(1, (int)Math.Ceiling((double)Total / PageSize));

 int TotalFamilies => ComputeTotalFamilies();
 int TotalMembers => DisplayRows.Count;
 int CoveredMembers => DisplayRows.Count(r => string.Equals(GetValue(r, "Member Status"), "ACTIVE", StringComparison.OrdinalIgnoreCase));
 int CoveredFamilies => DisplayRows
 .GroupBy(r => GetValue(r, "Family ID"))
 .Where(g => !string.IsNullOrEmpty(g.Key) && string.Equals(GetValue(g.First(), "Family Status"), "ACTIVE", StringComparison.OrdinalIgnoreCase))
 .Select(g => g.Key)
 .Distinct(StringComparer.OrdinalIgnoreCase)
 .Count();

 protected override async Task OnInitializedAsync()
 {
 await LoadPage();
 }

 async Task LoadPage()
 {
 Total = await DataService.GetTotalAsync();
 Rows = await DataService.GetPageAsync(CurrentPage, PageSize);
 var firstKeys = Rows.FirstOrDefault()?.Keys ?? Enumerable.Empty<string>();
 Headers = ReferenceHeaders.Concat(firstKeys.Where(k => !ReferenceHeaders.Contains(k))).ToList();
 ApplyFilters();
 }

 void ApplyFilters()
 {
 var q = Rows.AsEnumerable();

 bool Matches(Dictionary<string, object?> r)
 {
 string Get(string key) => (GetValue(r, key) ?? string.Empty).ToString();
 if (!string.IsNullOrWhiteSpace(Search) && !(Get("Name").Contains(Search, StringComparison.OrdinalIgnoreCase) || Get("Family ID").Contains(Search, StringComparison.OrdinalIgnoreCase))) return false;
 if (!string.IsNullOrWhiteSpace(District) && !Get("District").Equals(District, StringComparison.OrdinalIgnoreCase)) return false;
 if (!string.IsNullOrWhiteSpace(Block) && !Get("Block").Equals(Block, StringComparison.OrdinalIgnoreCase)) return false;
 if (!string.IsNullOrWhiteSpace(Village) && !Get("Village").Contains(Village, StringComparison.OrdinalIgnoreCase)) return false;
 if (!string.IsNullOrWhiteSpace(RU) && !Get("R/U").Equals(RU, StringComparison.OrdinalIgnoreCase)) return false;
 if (!string.IsNullOrWhiteSpace(Source) && !Get("Source").Equals(Source, StringComparison.OrdinalIgnoreCase)) return false;
 if (!string.IsNullOrWhiteSpace(MemberStatus) && !Get("Member Status").Equals(MemberStatus, StringComparison.OrdinalIgnoreCase)) return false;
 if (!string.IsNullOrWhiteSpace(FamilyStatus) && !Get("Family Status").Equals(FamilyStatus, StringComparison.OrdinalIgnoreCase)) return false;
 return true;
 }

 DisplayRows = q.Where(Matches).ToList();
 StateHasChanged();
 }

 string? GetValue(Dictionary<string, object?> row, string key)
 {
 if (row == null) return null;
 if (row.TryGetValue(key, out var v)) return v?.ToString();
 // try case-insensitive
 var found = row.FirstOrDefault(kv => string.Equals(kv.Key, key, StringComparison.OrdinalIgnoreCase));
 return found.Equals(default(KeyValuePair<string, object?>)) ? null : found.Value?.ToString();
 }

 int ComputeTotalFamilies()
 {
 return DisplayRows.Select(r => GetValue(r, "Family ID")).Where(s => !string.IsNullOrEmpty(s)).Distinct(StringComparer.OrdinalIgnoreCase).Count();
 }

 void Prev() { if (CurrentPage >1) { CurrentPage--; _ = LoadPage(); } }
 void Next() { if (CurrentPage < TotalPages) { CurrentPage++; _ = LoadPage(); } }
 void First() { if (CurrentPage !=1) { CurrentPage =1; _ = LoadPage(); } }
 void Last() { if (CurrentPage != TotalPages) { CurrentPage = TotalPages; _ = LoadPage(); } }

 async Task OnPageSizeChanged(ChangeEventArgs e)
 {
 if (int.TryParse(e.Value?.ToString(), out var v)) PageSize = v;
 CurrentPage =1;
 await LoadPage();
 }

 async Task ExportCsv()
 {
 var csv = new List<string>();
 csv.Add(string.Join(",", Headers.Select(h => '"' + h + '"')));
 foreach (var r in DisplayRows)
 {
 var row = Headers.Select(h => '"' + (GetValue(r,h) ?? string.Empty).Replace("\"","''") + '"');
 csv.Add(string.Join(",", row));
 }
 var content = string.Join("\n", csv);
 await JS.InvokeVoidAsync("downloadBlob", content, "PMJAY_Agra_Data.csv");
 }

 async Task Print()
 {
 await JS.InvokeVoidAsync("print");
 }
}

<!-- JS helpers -->
<script>
window.downloadBlob = function(content, filename){
 var a=document.createElement('a');
 a.href=URL.createObjectURL(new Blob([content],{type:'text/csv'}));
 a.download=filename;
 a.click();
};
</script>